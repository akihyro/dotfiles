[alias]
    a = add
    aa = add -A
    ap = add -p
    b = branch -vv
    ba = branch -avv
    br = browse
    c = commit
    ca = commit --amend --no-edit
    cl = clean -df
    co = checkout
    cp = cherry-pick
    d = diff -p --stat
    f = fetch
    ge = grep -I
    l = log --graph --name-status
    ls = ls-files -s --abbrev
    m = merge --no-edit
    p = pull
    r = rebase
    ri = rebase -i
    s = status
    sh = show -p --stat
    st = stash
    std = stash drop
    sti = stash push -u
    stl = stash list
    sto = stash pop
    sts = stash show
    t = tag
    tl = tag -ln
    u = push -u
[color]
    ui = auto
[commit]
    cleanup = scissors
    gpgsign = true
    verbose = true
[core]
    attributesfile = ~/.gitattributes
    autocrlf = false
    excludesfile = ~/.gitignore
[diff]
    colormoved = dimmed_zebra
[fetch]
    prune = true
    prunetags = true
[format]
    pretty = fuller
[grep]
    lineNumber = true
    patternType = extended
[interactive]
    singlekey = true
[log]
    abbrevcommit = true
    date = iso
    decorate = short
    follow = true
    showsignature = true
[merge]
    ff = false
    stat = true
[pull]
    ff = only
[push]
    default = current
    followtags = true
[rebase]
    abbreviatecommands = true
    autostash = true
    stat = true
[stash]
    showstat = true
[status]
    branch = true
    short = true
    showuntrackedfiles = all
[tag]
    forcesignannotated = true
    sort = -version:refname
[user]
    email = akihyro@gmail.com
    name = Akihiro Kondo
