[alias]
    a = add
    aa = add --all
    ap = add --patch
    b = branch --verbose
    ba = branch --all --verbose
    c = commit
    ca = commit --amend --no-edit
    co = checkout
    cp = cherry-pick
    d = diff
    dl = diff --name-status
    f = fetch
    l = log --name-status
    lg = log --graph --date=short --pretty=line
    ll = log --date=short --pretty=line
    ls = ls-files
    m = merge --no-ff
    p = pull
    pu = push --set-upstream
    r = rebase
    s = status --branch --short
    sh = show
    stl = stash list
    stp = stash pop
    sts = stash save --include-untracked
    t = tag
    tl = tag --list -n
[color]
    ui = auto
[commit]
    verbose = true
[core]
    attributesfile = ~/.gitattributes
    autocrlf = false
    excludesfile = ~/.gitignore
[diff]
    colormoved = dimmed_zebra
[fetch]
    prune = true
[format]
    pretty = fuller
[interactive]
    singlekey = true
[log]
    abbrevcommit = true
    date = iso
    decorate = short
    follow = true
[pretty]
    line = %C(yellow)%h%Creset %ad %s %C(green)<%an>%Creset%C(cyan)%d%Creset
[push]
    default = current
[rebase]
    autostash = true
[tag]
    sort = -taggerdate
[user]
    email = akihyro@gmail.com
    name = Akihiro Kondo
